#include <pop/visitor.hpp>
#include <pop/ast.hpp>

namespace Pop {

  void VisitorBase::visit(NodeList &n) {
    for (auto element : n.elements) {
      if (element)
        element->accept(*this);
    }
  }

  void OrderedVisitor::process(NodeList &n) {
    for (auto element : n.elements) {
      if (element)
        element->accept(*this);
    }
  }

  void PreOrderVisitor::visit(NodeList &n) {
    process(n);
    for (auto child : n.elements) {
      if (child)
        child->accept(*this);
    }
  }
